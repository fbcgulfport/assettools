{
	"name": "assettools",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun run --bun next dev",
		"build": "bun run --bun next build",
		"start": "bun run --bun cron & bun run --bun next start",
		"cron": "bun run --bun src/cron.ts",
		"db:generate": "bun run --bun drizzle-kit generate",
		"db:migrate": "bun run --bun drizzle-kit migrate",
		"email": "bun run --bun email dev --dir src/emails",
		"setup:gmail": "bun run --bun scripts/setup-gmail.ts",
		"lint": "bun run --bun biome check . --write",
		"typecheck": "bun run --bun tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@react-email/preview-server": "4.3.0",
		"@types/bun": "1.3.0",
		"@types/node-cron": "3.0.11",
		"@types/react": "19.2.2",
		"@types/react-dom": "19.2.2",
		"drizzle-kit": "0.31.5",
		"react-email": "4.3.0",
		"typescript": "5.9.3"
	},
	"dependencies": {
		"@react-email/components": "0.5.6",
		"@react-email/render": "1.3.2",
		"@react-email/tailwind": "^1.2.2",
		"@tailwindcss/postcss": "4.1.17",
		"better-auth": "1.3.34",
		"drizzle-orm": "0.44.6",
		"googleapis": "162.0.0",
		"next": "16.0.1",
		"node-cron": "4.2.1",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"tailwindcss": "4.1.17"
	}
}
